@model PersonAddRequest


@{
    ViewBag.Title = "Create Person";

}

<div>
    <a href="~/persons/index" class="link-hover">
        <i class="fa-solid fa-arrow-left" style="font-size:1rem;"></i>
        Back
    </a>
</div>
<h2>@ViewBag.Title</h2>



<div class="w-50">
    <form action="~/" method="post">
        <div class="form-field flex">
            <div class="w-25">
                <label for="PersonName" class="form-label pt">Name</label>
            </div>
            <div class="flex-1">
                <input type="text" id="PersonName" name="PersoName" class="form-input" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input type="email" id="Email" name="Email" class="form-input" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label for="DateOfBirth" class="form-label pt">Date Of Birth</label>
            </div>
            <div class="flex-1">
                <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-input" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label for="Gender" class="form-label pt">Gender</label>
            </div>
            <div class="flex-1">
                <input type="radio" id="Male" value="Male" name="Gender" class="form-input" />

                <label for="Male">Male</label>

                <input type="radio" id="Female" value="Female" name="Gender" class="form-input" />
                <label for="Female">Female</label>

                <input type="radio" id="Other" value="Other" name="Gender" class="form-input" />
                <label for="Other">Other</label>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label for="CountryID" class="form-label pt">Country</label>
            </div>
            <div class="flex-1">
                <select name="CountryID" id="CountryID">
                    <option value="value">text</option>
                </select>
            </div>
        </div>
    </form>
</div>
